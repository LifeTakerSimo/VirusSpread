	static int countInfected(Integer [][] world,int n) // function to calculate number of infected people infected
	{   
		int x=0; 
		for(int j =0; j<n ; j++ ) {
			 for(int i = 0; i < n; i++) 
			    {
			        if(world[i][j] == 1)
			        {
			        	x++;
			        }
			    }
		}	
			        
	return x;
	}
	public static List<Integer> virus(List<int[]> patients0, int n)
	{
		List<Integer> nbInfected = null;
		Integer[][] listBase = init (patients0,n);
		nbInfected.add(patients0.size());
		Integer[][] listfull = Collections.nCopies(n, 1).toArray(new Integer[1][1]);  // this list is made to verify if the list != 1  	
		while(! listBase.equals(listfull) ) // if the list not full of 1 , find the next generation 
			{
				nextGen (listBase,n);
				nbInfected.add(countInfected(listBase,n));
			}
		
		System.out.println(nbInfected);
		return nbInfected;
	}
		
	public static void main (String[] args) 
	  {
		System.out.print("Please enter number of lines: ");
	    Scanner in = new Scanner(System.in);
	    int n = in.nextInt();   // n : number of lines 
	    //    List<int[]> patients0 =         // job not finished here 
	    //    virus(patients0,n);
	  }
}
