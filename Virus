package virus;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.HashSet;
import java.util.List;
import java.util.Map;
import java.util.Set;

public class Virus 
		{
			int n;
			List<int[]> infected ;  // patients0 
			public Virus()
		{
			this.n=n;
			this.infected=infected;      
		}
		public static Integer[][] init (List<int[]> patients0, int n) // add element from the infected people list
		{
			Integer[][] listBase = Collections.nCopies(n, 0).toArray(new Integer[0][0]);     // grid full of 0
			for(int[] e : patients0)
		{	
			listBase[e[0]][e[1]]=1;	  // implement the infected people
		}
		return listBase ;
	}
		
	public static void nextGen (Integer[][] listBase , int n  ) 
	{
			 for(int j =0; j<n ; j++ ) {
			 for(int i = 0; i < n; i++) 
			    {
			        if(listBase[i][j] == 1) 
			        {
			        	listBase[i+1][j]=1;             // close cells got infected
			        	listBase[i][j+1]=1;
			        	listBase[i-1][j]=1;
			        	listBase[i][j-1]=1;
			        	
			        }
			    }
	      }
		
	}
	/* static void print(List<Integer> listOftheWorld)    // function to see the base 
	{
